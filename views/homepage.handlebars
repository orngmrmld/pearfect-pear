    <!-- Zip Code Search -->
    <div class="zipcode-search">
      <input id="zipcode-input" type="text" placeholder="Enter ZIP code">
      <button id="search-button">Search</button>
    </div>

      <!-- Recommended Zip Code From Previous Search --> 
      <p id="recommendation"></p>


    <!-- API Swiper Movies -->
    <div class="swiper mySwiper">
      <div id="swiperWrapper" class="swiper-wrapper">
      <div class="swiper-pagination"></div>
    </div>
    

    <!-- API Movie Details -->
    <div class="swiper-slide">
      <img class="movie-poster" src="" alt=""/>
    </div>


        <!-- Initialize the Swiper carousel -->
    <script>
      var swiper = new Swiper(".mySwiper", {
        effect: "coverflow",
        grabCursor: true,
        centeredSlides: true,
        slidesPerView: "auto",
        coverflowEffect: {
          rotate: 15,
          stretch: 0,
          depth: 300,
          modifier: 1,
          slideShadows: true,
        },
        loop: true
      });
  </script>

